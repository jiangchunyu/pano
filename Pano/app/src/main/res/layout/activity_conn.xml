<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_conn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    android:orientation="vertical"
    tools:context="com.vb.pano.ConnActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/bar" />
    <TextView
        android:id="@+id/skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳过"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:clickable="true"
        android:textColor="@color/backBtnColor"/>
    <ImageView
        android:layout_width="145dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:src="@drawable/vbpano_logo" />

    <LinearLayout
        android:id="@+id/conn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/conn_wifiname"
            android:layout_width="258dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_edit"
            android:textSize="18dp"
            android:hint="@string/login_wifiname_hint"
            android:textColorHint="@android:color/darker_gray"
            android:paddingLeft="10dp" />
        <TextView
            android:id="@+id/choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择WIFI"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:visibility="gone"
            android:clickable="true"
            android:textColor="@color/backBtnColor"/>
    <EditText
        android:id="@+id/conn_wifipwd"
        android:layout_width="258dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_edit"
        android:hint="@string/login_wifipwd_hint"
        android:inputType="textPassword"
        android:textSize="18dp"
        android:paddingLeft="10dp"
        android:textColorHint="@android:color/darker_gray" />
        <Spinner
            android:id="@+id/wifi_type"
            android:layout_width="100dp"
            android:entries="@array/wifi_type"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/darker_gray"
            android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/conn_btn"
        android:layout_width="258dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="@string/login_btn_text" />
</LinearLayout>
</LinearLayout>

