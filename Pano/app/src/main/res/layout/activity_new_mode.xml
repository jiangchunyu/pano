<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_mode"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorBg"
    tools:context="com.vb.pano.NewModeActivity">
    <RelativeLayout
        android:id="@+id/home_topbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bar" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:text="返回"
            android:textColor="@color/backBtnColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="新建模式"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:textSize="18dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="模式名称"
            android:textSize="20dp"
            android:textColor="@color/gray"/>
        <EditText
            android:id="@+id/newmode_name"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_height="45dp"
            android:background="@drawable/round_edit"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"
            android:hint="输入模式名称"
            android:textColorHint="@android:color/darker_gray"
            android:paddingLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="复制已有模式参数"
            android:textSize="20dp"
            android:textColor="@color/gray"/>
        <Spinner
            android:id="@+id/newmode_spinner"
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_height="45dp"
            android:background="@drawable/round_edit"
            android:textSize="18dp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/newmode_btn"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="新建模式" />
    <Button
        android:id="@+id/newmode_setbtn"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_button"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:text="设置模式参数" />
</LinearLayout>
